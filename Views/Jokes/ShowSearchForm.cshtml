@model JokesWebApplication.Models.Joke

<h4>Search for Joke</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ShowSearchResults">
           
            <div class="form-group">
                <label for="SearchPhrase" asp-for="JokeAnswer" class="control-label"></label>
                <input name="SearchPhrase" asp-for="JokeAnswer" class="form-control" />
                <span asp-validation-for="JokeAnswer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

